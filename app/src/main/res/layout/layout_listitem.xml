<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/imagen_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imagen"
            android:layout_centerHorizontal="true"
            android:text="NOMBRE"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/DNI_text"
            android:layout_toEndOf="@+id/DNI_text"
            android:text="34235547"
            android:textColor="#FFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/DNI_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imagen_download"
            android:layout_alignStart="@+id/imagen_nombre"
            android:text="DNI:"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagen_download"
            android:layout_width="59dp"
            android:layout_height="73dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fillColor="#FF000444"
            android:src="@drawable/ic_file_download_red" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

